@model Agence_de_Voyages.Models.Destination

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex justify-content-center">
    <h1>Destination Edit</h1>
</div>


<hr />
<div class="row p-4">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DestinationId" />
            <div class="form-group">
                <label asp-for="CityName" class="control-label"></label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirportCode" class="control-label"></label>
                <select asp-for="AirportCode" asp-items="Html.GetEnumSelectList<Airport>()" class="form-control"></select>
                <span asp-validation-for="AirportCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocalTransport" class="control-label"></label>
                <input asp-for="LocalTransport" class="form-control" />
                <span asp-validation-for="LocalTransport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceEstimate" class="control-label"></label>
                <input asp-for="PriceEstimate" class="form-control" />
                <span asp-validation-for="PriceEstimate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="p-2">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
