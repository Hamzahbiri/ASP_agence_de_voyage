    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center">
    <h1>Destination Delete</h1>
</div>

<h3 class="p-2">Are you sure you want to delete this Destination?</h3>
<div class="p-2">

    <hr />
    <div class="row p-4">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CityName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CityName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AirportCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AirportCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LocalTransport)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocalTransport)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PriceEstimate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PriceEstimate)
