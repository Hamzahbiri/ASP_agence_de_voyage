@model Agence_de_Voyages.Models.User
@{
    ViewData["Title"] = "Login";
}


<body class="bg-image" style="background-image: url('/images/bg_5.jpg'); top: 0; left: 0; width: 100%; height: 100%;">
<div >

        <div class="d-flex justify-content-center mt-4">
        <h1>Login</h1>
            <input type="hidden" id="errorMessage" value="@ViewBag.messageerror" />
    </div>

    <hr />
    <div class="row d-flex justify-content-center mt-4">
        <div class="card" style="  background-color: rgba(255, 255, 255, 0.5); width:28%;
    border-radius: 5%;">
            <div class="card-content p-4 ">
                    <form asp-controller="Login" asp-action="Auth" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <label class="control-label" for="useremail">Email:</label>
                        <input class="form-control" type="text" id="useremail" name="useremail" required>
                        <br>
                        <label class="control-label" for="password">Password:</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                        <br>
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-success mx-2" type="submit">Login</button>
                            <button class="btn btn-secondary mx-2" type="reset">Cancel</button>
                               
                        </div>
                </form>
            </div>
        </div>
    </div>
        <br />    <br />    <br />    <br />    <br />    <br />
    <div class=" p-2">
        <a asp-controller="Home" asp-action="Index">Back to Home</a>

    </div>
</div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

        <script>
          
            var errorMessage = $("#errorMessage").val();

        
            if (errorMessage) {
                alert(errorMessage);
            
            }
           
        </script>
    }
}
