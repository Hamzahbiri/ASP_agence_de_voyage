@model Agence_de_Voyages.Models.User

@{
    ViewData["Title"] = "Sign up";
}
<input type="hidden" id="errorMessage" value="@ViewBag.messageerror" />
<div class="bg-image" style="background-image: url('/images/bg_5.jpg'); top: 0; left: 0; width: 100%; height: 100%;">

<div class="d-flex justify-content-center " >
    <h1>Sign Up</h1>
</div>

<hr />
    <div class="row d-flex justify-content-center">
        <div class="card" style="  background-color: rgba(255, 255, 255, 0.5); width:28%;
    border-radius: 5%;">
            <div class="card-content p-4 ">
                <form asp-controller="Sign_up" asp-action="CreateUser" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label" style="color:black; font-size: 18px;">FullName</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <label asp-for="Age" class="control-label" style="color: black; font-size: 18px;">Age</label>
                <input asp-for="Age" type="text" class="form-control" pattern="[0-9]*" inputmode="numeric" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>



            <div class="form-group">
                        <label class="control-label" style="color: black; font-size: 18px;">Gender</label>
                <br />
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Gender" value="Male" class="form-check-input" checked />
                        <label class="form-check-label" style="color: black;">Male</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Gender" value="Female" class="form-check-input" />
                        <label class="form-check-label" style="color: black;">Female</label>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>


            <div class="form-group">
                    <label asp-for="Email" class="control-label" style="color: black; font-size: 18px;"></label>


                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <label asp-for="Phone" class="control-label" style="color: black; font-size: 18px;"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" for="Type" hidden>Type</label>
                <select asp-for="Type" class="form-control" hidden>
                    <option value="Client" selected>Client</option>
                    <option value="Admin">Admin</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>


            <div class="form-group">
                        <label asp-for="Password" class="control-label" style="color: black; font-size: 18px;"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create user" class="btn btn-primary" />
                <input type="reset" value="Cancel" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
    </div>

<div class="p-2">
        <a asp-controller="Home" asp-action="Index">Back to Home</a>

</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

        <script>
            // Get the error message from the hidden input
            var errorMessage = $("#errorMessage").val();

            // Check if an error message exists and display an alert
            if (errorMessage) {
                alert(errorMessage);
            }
        </script>
    }
}



