@model IEnumerable<Agence_de_Voyages.Models.Tour>

@{
    ViewData["Title"] = "Tour page";
}

<div class="d-flex justify-content-center">
    <h1>Creation tour</h1>
</div>


<div class="d-inline-flex p-2">
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    </div>
    <table class="table table-striped table-light table-bordered w-100">
        <thead>
            <tr>
                <th  scope="col">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th scope ="col">
                    @Html.DisplayNameFor(model => model.Date_of_departure)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Days_number)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Destinations)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Venues)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_of_departure)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Days_number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destinations)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venues)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.TourId">Edit</a> |
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.TourId">Details</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.TourId">Delete</a>
                    </td>
             
            </tr>

    }
        </tbody>
    </table>
